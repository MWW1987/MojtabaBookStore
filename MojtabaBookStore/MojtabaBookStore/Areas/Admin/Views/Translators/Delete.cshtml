@model Translator

@{
    ViewData["Title"] = "حذف مترجم";
}

<h1 class="text-right">حذف</h1>

<h3 class="text-right">مطمئنی میخوای حذفش کنی؟</h3>
<div>
    <h4 class="text-right">مترجم</h4>
    <hr />
    <dl class="row text-right" style="direction: rtl">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Family)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Family)
