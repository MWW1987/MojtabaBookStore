@model IEnumerable<Translator>

@{
    ViewData["Title"] = "اصلی";
}

<h1>صفحه اصلی</h1>

<p>
    <a asp-action="Create">ایجاد</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Family)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Family)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.TranslatorID">ویرایش</a> |
                <a asp-action="Details" asp-route-id="@item.TranslatorID">جزئیات</a> |
                <a asp-action="Delete" asp-route-id="@item.TranslatorID">حذف</a>
            </td>
        </tr>
}
    </tbody>
</table>
