@page
@model MojtabaBookStore.Areas.Admin.Pages.Publishers.IndexModel
@{
}

<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="card-header bg-light">
                ناشرین کتاب
            </div>
            <div class="card-body">
                <p>
                    <a asp-page="./Create" class="btn btn-primary">افزودن ناشر جدید</a>
                </p>
                <form method="post">
                    <table class="table table-striped table-bordered">
                        <thead>
                            <tr>
                                <th>
                                    ناشر
                                </th>
                                <th class="text-center">عملیات</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.Publishers)
                            {
                                <tr>
                                    <td>
                                        
                                    </td>
                                    <td class="text-center">
                                        <a asp-page="./Edit" asp-route-id="" class="btn btn-success btn-icon">
                                            <i class="fa fa-edit"></i>
                                        </a>
                                        <button type="submit" asp-route-id="" asp-page-handler="Delete" class="btn btn-danger btn-icon">
                                            <i class="fa fa-trash"></i>
                                        </button>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </form>

            </div>
        </div>
    </div>
</div>
